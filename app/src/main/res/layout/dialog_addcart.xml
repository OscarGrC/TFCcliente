<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
    android:background="@color/white"
    android:backgroundTint="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imagenAdd"
                        android:layout_width="103dp"
                        android:layout_height="92dp"
                        android:layout_marginStart="-150dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/logo" />

                    <Button
                        android:id="@+id/sendAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AÃ±adir"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/menosAdd" />

                    <TextView
                        android:id="@+id/NombreAdd"
                        android:layout_width="143dp"
                        android:layout_height="37dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="8dp"
                        android:text="NOMBRE"
                        android:textAlignment="center"
                        app:layout_constraintStart_toEndOf="@+id/imagenAdd"
                        app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/cantidadAdd"
                            android:layout_width="37dp"
                            android:layout_height="33dp"
                            android:layout_marginTop="15dp"
                            android:text="1"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            app:layout_constraintStart_toEndOf="@+id/menosAdd"
                            app:layout_constraintTop_toBottomOf="@+id/NombreAdd" />

                        <Button
                            android:id="@+id/masAdd"
                            android:layout_width="54dp"
                            android:layout_height="48dp"
                            android:text="+"
                            app:layout_constraintStart_toEndOf="@+id/cantidadAdd"
                            app:layout_constraintTop_toBottomOf="@+id/NombreAdd" />

                    <Button
                        android:id="@+id/menosAdd"
                        android:layout_width="54dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="10dp"
                        android:text="-"
                        app:layout_constraintStart_toEndOf="@+id/imagenAdd"
                        app:layout_constraintTop_toBottomOf="@+id/NombreAdd" />
                </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>


